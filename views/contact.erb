<h1>First Name : <%= @contact.first_name %></h1>
<h1>Last Name : <%= @contact.last_name %></h1>
<h1>Job Title : <%= @contact.job_title %></h1>
<h1>Company : <%= @contact.company %> </h1>
<h1>Contact Type : <%= @contact.contact_type %> </h1>
<h1>Email: <%= @contact.email %> </h1>


<form action="/contacts/<%= @contact.id %>" method="post">
  <div class="form-group">
    <label>Change First Name!</label>
    <input type="text" name="first" value="<%=@contact.first_name%>">
  </div>
  <div class="form-group">
    <label>Change Last Name!</label>
    <input type="text" name="last" value="<%=@contact.last_name%>">
  </div>
  <div class="form-group">
    <label>Update Email?</label>
    <input type="text" name="email" value="<%=@contact.email%>">
  </div>

  <button type="submit" class="btn">Update Info</button>
</form>

<a href="/">go back home</a>
